{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",             // or "CommonJS" if you prefer, but "NodeNext" works for ES modules
    "moduleResolution": "NodeNext",   // or "Node"
    "outDir": "dist",                 // Output directory for compiled files
    "rootDir": "src",                 // Where your .ts / .mts files live
    "esModuleInterop": true,          // IMPORTANT for Jimp default import
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,             // Helps avoid minor type definition conflicts
    "strict": true
  },
  "include": ["src"]
}
